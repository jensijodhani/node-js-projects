<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - View Products</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        /* Fixed Header */
        .header {
            background-color: #6583a1;
            color: white;
            padding: 1rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            font-size: 1.8rem;
        }

        .header .user-info {
            font-size: 1rem;
        }

        /* Fixed Sidebar */
        .sidebar {
            background-color: #3b6a9a;
            color: white;
            height: 100vh;
            padding: 2rem 1rem;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            box-shadow: 4px 0 6px rgba(0, 0, 0, 0.1);
            z-index: 999;
        }

        .sidebar h2 {
            font-size: 1.75rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
            margin-bottom: 1.5rem;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover,
        .sidebar .active {
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 3rem 2rem 2rem 2rem;
            margin-top: 70px; /* To avoid content being hidden under header */
            height: 100vh;
            overflow-y: auto;
        }

        .main-content h2 {
            font-size: 2rem;
            margin-bottom: 2rem;
            color: #495057;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
        }

        .card img {
            height: 200px;
            object-fit: cover;
            width: 100%;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #23272b;
        }

        .card-text {
            color: #6c757d;
            font-size: 1rem;
        }

        .btn {
            border-radius: 20px;
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-warning {
            background-color: #ffc107;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
                padding: 1rem;
            }

            .sidebar {
                width: 100%;
                padding: 1rem;
            }

            .main-content {
                margin-left: 0;
                padding: 1rem;
            }
        }
    </style>
</head>

<body>

    <!-- Fixed Header -->
    <header class="header">
        <h1>Admin Panel</h1>
        <div class="user-info">
            <span>Welcome, Admin</span>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar">
        <h2>Dashboard</h2>
        <a href="/view" class="active"><i class="bi bi-list-ul"></i> View Products</a>
        <a href="/add"><i class="bi bi-plus-circle"></i> Add Product</a>
        <a href="/logout"><i class="bi bi-box-arrow-right"></i> Log Out</a>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <h2>Product List</h2>
        <div class="row">
            <% user.map((val) => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="<%= val.image %>" alt="<%= val.name %>" class="card-img-top">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= val.name %></h5>
                        <p class="card-text">$<%= val.price %></p>
                        <p class="card-text">Quantity: <%= val.qty %></p>
                        <p class="card-text"><%= val.description %></p>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="/editpage/<%= val.id %>" class="btn btn-warning">Edit</a>
                            <a href="/addtocart?id=<%= val.id %>" class="btn btn-primary">
                                Add to Cart
                            </a>    
                            <a href="/deletdata/<%= val.id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </main>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
